<Window x:Class="ProductivityTools.Meetings.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductivityTools.Meetings.WpfClient"
        xmlns:meetingitem="clr-namespace:ProductivityTools.Meetings.WpfClient.Controls.MeetingItem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Width="100px" HorizontalAlignment="Left" Command="{Binding GetMeetingsCommand}" Content="Refresh"></Button>
        <Button Grid.Row="0" Width="100px" HorizontalAlignment="Left" Margin="100px,0px,0px,0px" Command="{Binding NewMeetingCommand}" Content="New"></Button>
        <TextBox Grid.Row="0" Width="100px" HorizontalAlignment="Left" Margin="200px,0px,0px,0px" Text="{Binding Secret}"></TextBox>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible" CanContentScroll="True" >
            <ItemsControl ItemsSource="{Binding Meetings}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>

                        <meetingitem:MeetingItemControl 
                        Subject="{Binding Meeting.Subject}" 
                        Date="{Binding Meeting.Date}"
                        BeforeNotes="{Binding Meeting.BeforeNotes, Mode=TwoWay}" 
                        DuringNotes="{Binding Meeting.DuringNotes, Mode=TwoWay}" 
                        AfterNotes="{Binding Meeting.AfterNotes, Mode=TwoWay}"
                        Id="{Binding Meeting.MeetingId}"
                        Save="{Binding SaveMeetingCommand}"
                        Edit="{Binding EditMeetingCommand}"
                        ReadOnly="True"
                        >
                        </meetingitem:MeetingItemControl >

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
